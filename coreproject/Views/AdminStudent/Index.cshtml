@model List<coreproject.Models.Studentcls>

<h2>Manage Students</h2>

<a href="/AdminStudent/Add" class="btn btn-primary mb-3">Add Student</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StudentId</td>
                <td>@s.FullName</td>
                <td>@s.Email</td>
                <td>@s.Phone</td>
                <td>@s.Department</td>
                <td>
                    <a href="/AdminStudent/Edit?id=@s.StudentId" class="btn btn-success">Edit</a>
                    <a href="/AdminStudent/Delete?id=@s.StudentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
