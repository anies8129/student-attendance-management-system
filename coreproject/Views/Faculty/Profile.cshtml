@model coreproject.Models.FacultyProfile

<h2>Faculty Profile</h2>

<div class="card shadow p-4" style="max-width:600px;">
    <h3>@Model.FullName</h3>

    <p><strong>Faculty ID:</strong> @Model.FacultyId</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Department:</strong> @Model.Department</p>

    <a href="/Faculty/Dashboard" class="btn btn-primary">Back</a>
</div>
